<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">

<link
  href="https://fonts.googleapis.com/css2?family=Fira+Sans&family=Source+Code+Pro:wght@300&family=Source+Sans+Pro:wght@300&display=swap"
  rel="stylesheet"
/>
<style>

  .bgg{
    background-repeat: no-repeat;
  background-size: cover;
  width: 100%;
  height: 100vh;
  filter: blur(8px);
  -webkit-filter: blur(8px);
  }

  /* Split the screen in half */
  .split {
    height: 100%;
    width: 50%;
    top: 7%;
    left: 25%;
    border-radius: 2%;
    position: fixed;
    z-index: 1;
    overflow-x: hidden;
    padding-top: 20px;
    background-color: white;
    border: #00b894 1.5px solid;
  }

  h1 {
        color: #00b894;
        font-size: 1.5rem;
        margin-bottom: 2rem;
      }

  .form-outline {
    margin-bottom: 4%;
  }

  p {
    margin-top: 5%;
  }

  a {
    text-decoration: underline;
    color: black;
  }

  /* input {
    font-size: large;
    margin-bottom: 1rem;
  } */

  .btn1 {
    color: white;
    background-color: #00b894;
    border-color: #00b894;
    /* border-radius: 10%; */
    padding: 0.5rem;
    width: 50%;
    cursor: pointer;
  }

  .btn2 {
    background-color: white;
    border-color: #00b894;
    border-radius: 10%;
    margin-bottom: 1rem;
    padding: 0.5rem;
    cursor: pointer;
  }
  

  h3{
    font-size: 1.1rem;
    margin-right: 0.5rem;
  }

  /* If you want the content centered horizontally and vertically */
  .centered {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }

  /* Style the image inside the centered container, if needed */
  .centered img {
    width: 200px;
  }

  form{
    text-align: left;
  }

  .input-field {
  position: relative;
  width: 300px;
  margin-bottom: 2rem;
  height: 44px;
  line-height: 44px;
}
label {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  color: #d3d3d3;
  transition: 0.2s all;
  cursor: text;
}
input {
  width: 100%;
  background-color: white;
  border: 0;
  outline: 0;
  padding: 0.5rem 0;
  box-shadow: none;
  color: #111;
  border-bottom: 2px solid #d3d3d3;
}
input:invalid {
  outline: 0;
  color: #00b894;
    border-color: #00b894;
}
input:focus,
input:valid {
  border-color: #00b894;
}
input:focus~label,
input:valid~label {
  font-size: 14px;
  top: -24px;
  color: #00b894;
}

</style>

<body>
  <img class="bgg" id="bg" src="/images/event.jpeg" alt="event">

  <div class="container">
    <div class="split">
      <div class="centered">
        <a href="/"><img src="/images/logo_transparent.png" alt="Event Expo." /></a>
        <h3><%=phrase%></h3>
        <h1>CREATE AN OWNER ACCOUNT</h1>

          <form action="/signup_owner" method="post" onsubmit="return validateForm()">
            
            
            <div class="input-field">
              <input type="text" id="name" required name="oName"/>
              <label for="name">Name</label>
            </div>

            <div class="input-field">
              <input type="email" id="email" required name="oEmail"/>
              <label for="email">Email</label>
            </div>

            <div class="input-field">
              <input type="text" id="number" required name="oNumber"/>
              <label for="number">Contact</label>
            </div>

            <div class="input-field">
              <input type="password" id="password" required name="password"/>
              <label for="password">Password</label>
            </div><br>

              <button class="btn1" type="submit">Register</button><br><br>

          <div class="d-flex align-items-center justify-content-center pb-4">

          <h3>Already have an account?</h3> 
            <a href="/login_owner">
              <button class="btn2" type="button">
               Login
              </button>
            </a>
          </div>
        </form>


        <script>
          function isAllNumbers(input) {
            return /^\d{10}$/.test(input);
          }
          function isAllAlphabets(input) {
            return /^[a-zA-Z\s]+$/.test(input);
          }   
          function isValidEmail(email) {
            return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
          }
          function validateForm() {
            var passInput = document.getElementById("password");
            var passwordValue = passInput.value;
            var fnameInput = document.getElementById("name");
            var fnameValue = fnameInput.value;
            var numberInput = document.getElementById("number");
            var numberValue = numberInput.value;
            var emailInput = document.getElementById("email");
            var emailValue = emailInput.value;
 
            if (!isAllAlphabets(fnameValue)) {
              alert("First name should contain only alphabets");
              return false;
            }
            if (!isAllNumbers(numberValue)) {
              alert("Mobile should contain only 10 numbers");
              return false;
            }
            if (!isValidEmail(emailValue)) {
              alert("Email format invalid");
              return false;
            }
            if (passwordValue.length < 8) {
              alert("Password must contain atleast 8 characters");
              return false;
            }

            return true;
          }
        </script>



      </div>
    </div>
  </div>
</body>
