}

nav .menu a:hover {
  color: #00b894;
}


  .gallery-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 50px auto;
  margin-top: 200px;
  max-width: 1200px;
}

.gallery-row {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20px 0;
}

.gallery-item {
  position: relative;
  width: 400px;
  height: 250px;
  margin: 10px;
  overflow: hidden;
}

.gallery-item img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease-in-out;
}

.gallery-item:hover img {
  filter: blur(8px);
  -webkit-filter: blur(8px);
  transform: scale(1.1);
}

.gallery-item .overlay {
  position: absolute;
  top: 35%;
  left: 0;
  width: 100%;
  height: 30%;
  opacity: 0;
  transition: opacity 0.2s ease-in-out;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.gallery-item:hover .overlay {
  opacity: 1;
}

.gallery-item .overlay-content {
  text-align: center;
  color: #fff;
  padding: 20px;
}

.gallery-item .overlay-content h3 {
  font-size: 1.5rem;
  margin-bottom: 10px;
}

.gallery-item .overlay-content p {
  font-size: 1rem;
}

</style>
